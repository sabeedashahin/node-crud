<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/bst/css/bootstrap.min.css" />
  <title>CRUDFORM</title>
</head>
<body>
  <form method="post" action="<%= base_url %>/crud/create">
    <div class="container">
      <div class="row">
        <div class="col col-md-4 offset-4">
          <h3 class="text-center text-primary mt-4">Contact Entry</h3>
          <% if(msg) { %>
          <div class="alert alert-success"><%= msg %></div>
          <% } %>
          <div class="form-group">
            <label>Name</label>
            <input type="text" name="name" placeholder="Name" class="form-control mt-2" />
          </div>
          <div class="form-group">
            <label>Email</label>
            <input type="email" name="email" placeholder="Email" class="form-control mt-2" />
          </div>
          <div class="form-group">
            <label>Mobile</label>
            <input type="text" name="mobile" placeholder="Mobile" class="form-control mt-2" />
          </div>
          <input type="submit" value="Enter" class="btn btn-primary w-100 mt-2" />
        </div>
      </div>
    </div>
  </form>
  <br />
  <br />
  <table class="table table-primary text-center">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Mobile</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach((user) => { %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.mobile %></td>
        <td>
          <a href="<%= base_url %>/crud/edit/<%= user._id %>" class="btn btn-success">Edit</a>
          <a href="<%= base_url %>/crud/delete/<%= user._id %>" class="btn btn-danger">Delete</a>
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
</body>
</html>
